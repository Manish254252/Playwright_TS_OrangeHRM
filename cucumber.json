{
    "default": {
        "paths": [
            "tests/features/"
        ],
        "require": [
            "tests/steps/*.ts"
        ],
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "format": [
            [
                "html",
                "reports/cucumber-report.html"
            ],
            "summary",
            "progress-bar",
            "json:./cucumber-report.json"
        ],
        "scripts": {
            "test": "cucumber-js --format cucumber-js-extent:spark.html"
        }
    }
}